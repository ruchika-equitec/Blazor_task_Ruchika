<!-- EditStudent.razor -->
@page "/UpdateStudent/{StudentID:int}"
@using BlazorApp1.Models
@using BlazorApp1.Data
@inject IStudentService StudentService
@inject NavigationManager NavigationManager
<h3 class="mt-4">Edit Student</h3>

<EditForm Model="@typeof(BlazorApp1.Models.StudTable)" OnValidSubmit="EditStudent" class="mt-3">
    <div class="mb-3">
        <label class="form-label" for="name">Name:</label>
        <InputText class="form-control" id="name" @bind-Value="studs.Name" placeholder="Enter your name" />


    </div>
    <div class="mb-3">
        <label class="form-label" for="address">Email:</label>
        <InputText class="form-control" id="address" @bind-Value="studs.EmailId" placeholder="Enter your address" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="age">Age:</label>

        <InputNumber class="form-control" id="age" @bind-Value="studs.Age" placeholder="Enter your age" />

    </div>
    <div class="form-group">
        <label for="gender">Gender:</label>
        <select class="form-control" id="gender" @bind="studs.Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" for="age">Fees:</label>
        <InputNumber class="form-control" id="age" @bind-Value="studs.Fees" placeholder="Enter Fees" />
    </div>
    <div class="form-group">
        <label for="skills">Skills:</label>
        <div>
            @foreach (var skill in skills)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="@skill.Name" @bind="skill.IsSelected" />
                    <label class="form-check-label" for="@skill.Name">@skill.Name</label>
                </div>
            }
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Edit Student</button>
    </div>
</EditForm>

