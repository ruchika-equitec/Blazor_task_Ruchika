<!-- EditStudent.razor -->
@page "/UpdateStudent/{StudentID:int}"
@using BlazorApp1.Models
@inject IStudentService StudentService
@inject NavigationManager NavigationManager
<h3 class="mt-4">Edit Student</h3>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" @bind="studs.Name" />           
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" class="form-control" id="age" @bind="studs.Age" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" @bind="studs.EmailId" />
    </div>

    <div class="form-group">
        <label for="fees">Fees:</label>
        <input type="number" class="form-control" id="fees" @bind="studs.Fees" />
    </div>

    <div class="form-group">
        <label for="gender">Gender:</label>
        <select class="form-control" id="gender" @bind="studs.Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <div class="form-group">
        <label for="skills">Skills:</label>
        <div>
            @foreach (var skill in skills)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="@skill.Name" @bind="skill.IsSelected" />
                    <label class="form-check-label" for="@skill.Name">@skill.Name</label>
                </div>
            }
        </div>
    </div>
    <button class="btn btn-primary" @onclick="EditStudent">Save Changes</button>

</div>


