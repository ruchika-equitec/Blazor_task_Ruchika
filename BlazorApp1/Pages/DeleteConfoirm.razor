@page "/DelConStud/{Id:int}"
@using BlazorApp1.Models
@using Microsoft.EntityFrameworkCore;
@inject IStudentService StudentService
@inject IJSRuntime JSRuntime;
@inject NavigationManager NavigationManager
@using Microsoft.JSInterop;


<EditForm EditContext="editContext" class="mt-3" OnSubmit="() => SoftDeleteStudAsync(studs.StudentId)">
    <ul class="row forumBox">
        <li class="col-12">
            <h3>Student Details</h3>
        </li>
        @if (studs != null)
        {


            <li class="col-3">
                <label class="inputLabel">Name</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.Name" class="form-control" disabled="disabled" />
                </div>
            </li>

            <li class="col-3">
                <label class="inputLabel">Age:</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputNumber @bind-Value="studs.Age" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel">Gender:</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.Gender" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel">Email ID</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.EmailId" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel">Fees</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputNumber @bind-Value="studs.Fees" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel"> Skills</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.Skills" class="form-control" disabled="disabled" />
                </div>
            </li>

        }
        else
        {
            <li class="col-12">
                <p>No employee details found.</p>
            </li>
        }
        <li class="col-12 mt_20">
            <div class="form_btns">
                <button type="submit" class="common_btn btnRed">Delete</button>
                <button type="button" class="common_btn btnBlue" @onclick="GoBack">Cancel</button>
            </div>
        </li>

    </ul>
</EditForm>