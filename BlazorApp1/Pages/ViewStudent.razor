@page "/ViewStudent/{studentId:int}"
@using BlazorApp1.Models
@inject IStudentService StudentService
@inject NavigationManager NavigationManager



<EditForm Model="@typeof(BlazorApp1.Models.StudTable)" class="mt-3">
<ul class="row forumBox">
        <li class="col-12">
            <h3>Employee Details</h3>
        </li>
        @if (studs != null)
        {
            

            <li class="col-3">
                <label class="inputLabel">Name</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.Name" class="form-control" disabled="disabled" />
                </div>
            </li>
        
            <li class="col-3">
                <label class="inputLabel">Age:</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputNumber @bind-Value="studs.Age" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel">Gender:</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.Gender" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel">Email ID</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputText @bind-Value="studs.EmailId" class="form-control" disabled="disabled" />
                </div>
            </li>
              <li class="col-3">
                <label class="inputLabel">Fees</label>
            </li>
            <li class="col-3">
                <div class="form_inputBox">
                    <InputNumber @bind-Value="studs.Fees" class="form-control" disabled="disabled" />
                </div>
            </li>
            <li class="col-3">
                <label class="inputLabel"> Skills</label>
            </li>
            <li class="col-3">
                <div>
                    @foreach (var skill in skills)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="@skill.Name" @bind="skill.IsSelected" disabled="@(!skill.IsSelected)" onclick="return false;"/>
                            <label class="form-check-label" for="@skill.Name">@skill.Name</label>
                        </div>
                    }
                </div>
            </li>
           
        }
        else
        {
            <li class="col-12">
                <p>No student details found.</p>
            </li>
        }
        <li class="col-12 mt_20">
            <div class="form_btns">
                <button type="button" class="common_btn btnBlue" @onclick="GoBack">Cancel</button>
            </div>
        </li>
    </ul>
</EditForm>
